<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark"
    android:orientation="horizontal"
    android:padding="8dp"
    tools:context=".fragment.BottomMediaFragment">

    <ImageView
        android:id="@+id/imgSelectedSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSelectedTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/whiteText"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvSelectedArtist"
        app:layout_constraintEnd_toStartOf="@+id/imgControlPlayer"
        app:layout_constraintStart_toEndOf="@+id/imgSelectedSong"
        app:layout_constraintTop_toTopOf="@+id/imgSelectedSong" />

    <TextView
        android:id="@+id/tvSelectedArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/whiteText"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgSelectedSong"
        app:layout_constraintEnd_toStartOf="@+id/imgControlPlayer"
        app:layout_constraintStart_toEndOf="@+id/imgSelectedSong" />

    <ImageView
        android:id="@+id/imgControlPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>